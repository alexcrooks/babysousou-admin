!!!
%html
  %head
    %title BabysousouAdmin
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/sandstone/bootstrap.min.css', :media => 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', :media => 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag '//cdn.jsdelivr.net/jquery.bootstrapvalidator/0.5.3/css/bootstrapValidator.min.css', :media => 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.3/css/bootstrap-select.min.css', :media => 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true

    = javascript_include_tag '//code.jquery.com/jquery-1.11.0.min.js', 'data-turbolinks-track' => true
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js', 'data-turbolinks-track' => true
    = javascript_include_tag '//cdn.jsdelivr.net/jquery.bootstrapvalidator/0.5.3/js/bootstrapValidator.min.js', 'data-turbolinks-track' => true
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.3/js/bootstrap-select.min.js', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-inverse-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => "#"} Babysousou
      .navbar-collapse.collapse.navbar-inverse-collapse
        %ul.nav.navbar-nav
          %li{class: ('active' if @navigation.eql?('items'))}
            = link_to 'Items', items_path
          %li{class: ('active' if @navigation.eql?('babysousou_items'))}
            = link_to 'Babysousou Items', babysousou_items_path
  
    .container
      = render 'layouts/messages'
      = yield